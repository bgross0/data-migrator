  "steps": [
    {
      "title": "Import Customers & Contacts",
      "models": ["res.partner"],
      "description": "Import your customer database with contact information",
      "sampleHeaders": ["name", "email", "phone", "street", "city", "state", "zip", "country"]
    },
    {
      "title": "Import CRM Configuration",
      "models": ["crm.team", "utm.source", "utm.medium", "utm.campaign", "crm.lost.reason"],
      "description": "Set up sales teams and tracking parameters",
