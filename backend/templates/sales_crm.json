    },
    {
      "title": "Import Leads & Opportunities",
      "models": ["crm.lead"],
      "description": "Import sales pipeline with leads and opportunities",
      "dependsOn": ["res.partner"]
    },
    {
      "title": "Import Products & Services",
      "models": ["product.category", "product.template", "product.product"],
      "description": "Import your product catalog"
    },
    {
      "title": "Import Sales Orders",
      "models": ["sale.order", "sale.order.line"],
      "description": "Import historical sales orders",
      "dependsOn": ["res.partner", "product.product"]
    }
  ],
  "metadata": {
